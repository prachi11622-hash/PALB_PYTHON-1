# First Program
print("Hello World!")

# Print Resume
print("Hello! I will introduce myself.")
print("Name: Prachi Pushpam")
print("Age: 20")
print("Job: Data Scientist")
print("Address: Greater Noida, India")
print("Place of Birth: Bihar, India")

# Import math library
import math

# Calculate area and circumference of circle (radius = 4)
radius = 4.0
print("\nRadius =", radius)
print("Area =", math.pi * radius ** 2)
print("Circumference =", 2 * math.pi * radius)

# Calculate area of circle (radius = 5)
radius = 5.0
print("\nRadius =", radius)
print("Area of circle =", math.pi * radius ** 2)

# Calculate area of triangle
base = 4.0
height = 5.0
print("\nArea of Triangle =", 0.5 * base * height)

# Calculate area of rectangle
length = 14
breadth = 5
print("\nArea of Rectangle =", length * breadth)

# Simple Interest Calculator
p = 1000
t = 2
r = 5
si = (p * r * t) / 100
print("\nSimple Interest =", si)

# Calculate average of three numbers
num1 = 2
num2 = 4
num3 = 6
avg = (num1 + num2 + num3) / 3
print("\nAverage of three numbers =", avg)

# Convert Celsius to Fahrenheit
celsius = 37
fahrenheit = celsius * (9/5) + 32
print("\nCelsius to Fahrenheit =", fahrenheit)

# Calculate age in days (approximate)
age = 20
age_days = int(age * 365.25)
print("\nAge in days =", age_days)

# Take user input and calculate area of circle
radius = float(input("\nEnter the radius: "))
area = math.pi * radius ** 2
print("Area of circle =", area)
